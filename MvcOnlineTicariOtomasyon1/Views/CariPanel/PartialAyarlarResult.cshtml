@model MvcOnlineTicariOtomasyon1.Models.Siniflar.Cariler

@using (Html.BeginForm("CariUpdate", "CariPanel", FormMethod.Post))
{
    <form class="form-horizontal">
        @Html.HiddenFor(c=>c.CariID)
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.CariAd, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Soyad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.CariSoyad, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Mail Adresi</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.CariMail, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputExperience" class="col-sm-2 col-form-label">Şehir</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.CariSehir, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.CariSifre, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Bilgileri okudum onaylıyorum
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-outline-success">Güncelle</button>
            </div>
        </div>
    </form>
}
