@model IEnumerable<MvcOnlineTicariOtomasyon1.Models.Siniflar.SinifGrup2>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
</div>
<div class="card-body p-0">
    <table class="table table-sm">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Departman</th>
                <th>Progress Bar</th>
                <th style="width: 40px">Adet</th>
            </tr>
        </thead>
        <tbody>
            @{int siraNo = 0;}
            @foreach (var _departmanPer in Model)
            {
                <tr>
                    <td>@{ siraNo++;} @siraNo</td>
                    <td>@_departmanPer.Departman</td>
                    <td>
                        <div class="progress progress-xs progress-striped active">
                            <div class="progress-bar bg-primary" style="width: @(_departmanPer.depSayi * 20)%"></div>
                        </div>
                    </td>
                    <td><span class="badge bg-primary">@_departmanPer.depSayi</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>