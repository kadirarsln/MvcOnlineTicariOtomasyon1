@using MvcOnlineTicariOtomasyon1.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisHareketDetay";
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
}

<br />
<h3>Satış Detayı </h3>
<br />

<table class="table table-condensed">
    <tr>
        <th>SATIŞ ID</th>
        <th>ÜRÜN</th>
        <th>CARİ</th>
        <th>PERSONEL</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM</th>
        <th>TARİH</th>
        
    </tr>
    @foreach (var _satisHareketDetay in Model)
    {
        <tr>
            <td>@_satisHareketDetay.SatısID</td>
            <td>@_satisHareketDetay.Urun.UrunAd</td>
            <td>@_satisHareketDetay.Cariler.CariAd  @_satisHareketDetay.Cariler.CariSoyad</td>
            <td>@_satisHareketDetay.Personel.PersonelAd @_satisHareketDetay.Personel.PersonelSoyad</td>
            <td>@_satisHareketDetay.Fiyat</td>
            <td>@_satisHareketDetay.Adet</td>
            <td>@_satisHareketDetay.ToplamTutar</td>
            <td>@_satisHareketDetay.Tarih</td>
        </tr>
    }
</table>
<button class="btn btn-default" style="background-color: cornflowerblue">Yazdır</button>


